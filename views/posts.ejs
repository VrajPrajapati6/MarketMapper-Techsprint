<% layout('layouts/boilerplate') -%>

<style>
  /* 1. Base Theme & Background */
  body {
    background: #050505;
    color: #e5e7eb;
  }
  .container {
    width: 75%;
    margin: 80px auto;
  }
  .page-title {
    text-align: center;
    margin-bottom: 40px;
    font-size: 30px;
    font-weight: 800;
    color: #fff;
  }

  /* 2. Compact Image Gallery Styling */
  .image-gallery-wrapper {
    margin: 18px 0;
    position: relative;
  }

  .image-scroll-container {
    display: flex;
    gap: 12px;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    padding-bottom: 10px;
    scrollbar-width: none; /* Firefox */
  }

  .image-scroll-container::-webkit-scrollbar {
    display: none; /* Chrome/Safari */
  }

  .gallery-item {
    flex: 0 0 280px; /* Small, fixed width */
    height: 180px; /* Small, fixed height */
    scroll-snap-align: start;
    border-radius: 14px;
    overflow: hidden;
    background: #111;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* High quality cropping for compact view */
    transition: transform 0.3s ease;
  }

  .gallery-item:hover img {
    transform: scale(1.05);
  }

  .scroll-hint {
    font-size: 11px;
    color: #a855f7;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-top: 5px;
    display: block;
    text-align: right;
  }

  /* 3. Post Card Styling */
  .post-card {
    background: rgba(17, 17, 18, 0.85);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 22px;
    padding: 22px;
    margin-bottom: 30px;
    backdrop-filter: blur(18px);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.6);
  }
  .post-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }
  .post-title {
    margin: 0;
    font-size: 20px;
    font-weight: 700;
    color: #fff;
  }
  .post-type {
    display: inline-block;
    margin-top: 6px;
    font-size: 11px;
    font-weight: 700;
    color: #a855f7;
    background: rgba(168, 85, 247, 0.12);
    padding: 4px 10px;
    border-radius: 999px;
  }
  .post-content {
    margin: 16px 0;
    line-height: 1.7;
    color: #d1d5db;
  }

  /* 4. Footer & Votes */
  .post-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    padding-top: 12px;
  }
  .vote-container {
    display: flex;
    align-items: center;
    gap: 12px;
    background: rgba(255, 255, 255, 0.05);
    padding: 6px 14px;
    border-radius: 50px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  .vote-btn {
    background: none;
    border: none;
    color: #94a3b8;
    font-size: 1.1rem;
    cursor: pointer;
    transition: 0.3s;
  }
  .vote-btn.up-active {
    color: #22c55e;
  }
  .vote-btn.down-active {
    color: #ef4444;
  }

  /* 5. Search & Chips */
  .search-wrapper {
    max-width: 600px;
    margin: 0 auto 50px auto;
  }
  .search-input {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #fff;
    padding: 12px 25px;
    border-radius: 50px;
    width: 100%;
  }
  .user-chip {
    display: inline-block;
    background: rgba(168, 85, 247, 0.1);
    border: 1px solid rgba(168, 85, 247, 0.3);
    color: #fff;
    padding: 8px 16px;
    border-radius: 20px;
    margin: 5px;
    text-decoration: none;
  }
</style>

<div class="container">
  <canvas
    id="glitterCanvas"
    style="
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: -1;
    "
  ></canvas>
  <h1 class="page-title">Business Community</h1>

  <div class="search-wrapper">
    <form action="/posts" method="GET">
      <input
        type="text"
        name="search"
        class="search-input"
        placeholder="Search posts or people..."
        value="<%= (typeof search !== 'undefined') ? search : '' %>"
      />
    </form>
  </div>

  <% if (typeof search !== 'undefined' && search && typeof foundUsers !==
  'undefined' && foundUsers.length > 0) { %>
  <div style="margin-bottom: 40px; text-align: center">
    <p style="color: #9ca3af; font-size: 14px; margin-bottom: 15px">
      Matching Users:
    </p>
    <% foundUsers.forEach(function(user){ %>
    <a href="/profile/<%= user._id %>" class="user-chip"
      >üë§ @<%= user.username %></a
    >
    <% }); %>
    <hr
      style="
        border: 0;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        margin-top: 30px;
      "
    />
  </div>
  <% } %> <% if (!posts || posts.length === 0) { %>
  <div class="empty-text">
    <p>No posts available at the moment.</p>
    <a href="/posts" style="color: #a855f7; text-decoration: none"
      >Refresh Feed</a
    >
  </div>
  <% } else { %> <% posts.forEach(function(post, index){ %>
  <div class="post-card">
    <div class="post-header">
      <div>
        <h3 class="post-title"><%= post.title %></h3>
        <span class="post-type"><%= post.postType %></span>
      </div>
      <span class="post-date"
        ><%= new Date(post.createdAt).toDateString() %></span
      >
    </div>

    <% if(post.images && post.images.length > 0) { %>
    <div class="image-gallery-wrapper">
      <div class="image-scroll-container">
        <% post.images.forEach(function(img){ %>
        <div class="gallery-item">
          <img src="<%= img %>" alt="Post content" loading="lazy" />
        </div>
        <% }); %>
      </div>
      <% if(post.images.length > 1) { %>
      <span class="scroll-hint">Swipe to see more ‚Üí</span>
      <% } %>
    </div>
    <% } %>

    <p class="post-content"><%= post.content %></p>

    <div class="post-footer">
      <a
        href="/profile/<%= (post.authorUser && post.authorUser._id) ? post.authorUser._id : '#' %>"
        class="text-decoration-none"
      >
        <div class="post-meta" style="color: #cbd5e1; font-size: 13px">
          <span style="margin-right: 15px"
            >üè¢ <%= post.authorBusiness ? post.authorBusiness.name : 'Unknown'
            %></span
          >
          <span
            >üë§ <%= post.authorUser ? post.authorUser.username : 'Anonymous'
            %></span
          >
        </div>
      </a>

      <div class="vote-container" data-post-id="<%= post._id %>">
        <button class="vote-btn up-trigger" onclick="handleVote(this, 'up')">
          <i class="fa-solid fa-arrow-up"></i>
        </button>
        <span class="vote-score"
          ><%= (post.upvotes || 0) - (post.downvotes || 0) %></span
        >
        <button
          class="vote-btn down-trigger"
          onclick="handleVote(this, 'down')"
        >
          <i class="fa-solid fa-arrow-down"></i>
        </button>
      </div>
    </div>
  </div>
  <% }); %> <% } %>
</div>

<script>
  // Voting Logic
  async function handleVote(button, type) {
    const container = button.closest(".vote-container");
    const postId = container.dataset.postId;
    const scoreElement = container.querySelector(".vote-score");
    const upBtn = container.querySelector(".up-trigger");
    const downBtn = container.querySelector(".down-trigger");

    if (button.classList.contains("processing")) return;
    button.classList.add("processing");

    let action =
      type === "up"
        ? upBtn.classList.contains("up-active")
          ? "removeUp"
          : "addUp"
        : downBtn.classList.contains("down-active")
        ? "removeDown"
        : "addDown";

    try {
      const response = await fetch("/posts/" + postId + "/vote", {
        method: "PATCH",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ action: action }),
      });

      if (response.ok) {
        const data = await response.json();
        scoreElement.innerText = data.newScore;
        if (type === "up") {
          upBtn.classList.toggle("up-active");
          downBtn.classList.remove("down-active");
        } else {
          downBtn.classList.toggle("down-active");
          upBtn.classList.remove("up-active");
        }
      }
    } catch (err) {
      console.error("Vote failed", err);
    } finally {
      button.classList.remove("processing");
    }
  }

  // Glitter Background
  const canvas = document.getElementById("glitterCanvas");
  const ctx = canvas.getContext("2d");
  let particles = [];
  const colors = ["#a855f7", "#ec4899", "#6366f1", "#3b82f6"];

  function init() {
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;
    particles = [];
    for (let i = 0; i < 90; i++) {
      particles.push({
        x: Math.random() * canvas.width,
        y: Math.random() * canvas.height,
        size: Math.random() * 4 + 1,
        dx: (Math.random() - 0.5) * 0.8,
        dy: (Math.random() - 0.5) * 0.8,
        color: colors[Math.floor(Math.random() * colors.length)],
      });
    }
  }

  function animate() {
    ctx.clearRect(0, 0, canvas.width, canvas.height);
    particles.forEach((p) => {
      let gradient = ctx.createRadialGradient(p.x, p.y, 0, p.x, p.y, p.size);
      gradient.addColorStop(0, "white");
      gradient.addColorStop(0.4, p.color);
      gradient.addColorStop(1, "transparent");
      ctx.fillStyle = gradient;
      ctx.beginPath();
      ctx.arc(p.x, p.y, p.size, 0, Math.PI * 2);
      ctx.fill();
      p.x += p.dx;
      p.y += p.dy;
      if (p.x < 0 || p.x > canvas.width) p.dx *= -1;
      if (p.y < 0 || p.y > canvas.height) p.dy *= -1;
    });
    requestAnimationFrame(animate);
  }
  window.addEventListener("resize", init);
  init();
  animate();
</script>
