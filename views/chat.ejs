<% layout('layouts/boilerplate') -%>

<style>
  .chat-container {
    height: 75vh;
    display: flex;
    flex-direction: column;
    margin-top: 80px;
  }
  .chat-header {
    background: rgba(17, 17, 18, 0.9);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 20px 20px 0 0;
    padding: 15px 25px;
  }
  .chat-messages {
    flex-grow: 1;
    overflow-y: auto;
    padding: 20px;
    background: rgba(255, 255, 255, 0.02);
    border-inline: 1px solid rgba(255, 255, 255, 0.08);
  }
  .message-bubble {
    max-width: 70%;
    padding: 12px 18px;
    border-radius: 18px;
    margin-bottom: 12px;
    font-size: 0.95rem;
  }
  .msg-sent {
    background: #a855f7;
    color: white;
    align-self: flex-end;
    border-bottom-right-radius: 4px;
  }
  .msg-received {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    align-self: flex-start;
    border-bottom-left-radius: 4px;
  }
  .chat-input-area {
    background: rgba(17, 17, 18, 0.9);
    padding: 20px;
    border-radius: 0 0 20px 20px;
    border: 1px solid rgba(255, 255, 255, 0.08);
  }
  .btn-agreement {
    background: rgba(168, 85, 247, 0.15);
    border: 1px solid #a855f7;
    color: white;
    font-weight: 700;
    border-radius: 50px;
    transition: 0.3s;
  }
  .btn-agreement:hover {
    background: rgba(168, 85, 247, 0.15);
    color: #a855f7;
  }
  .hover-purple:hover {
    color: #a855f7 !important;
    text-shadow: 0 0 10px rgba(168, 85, 247, 0.5);
  }
  .transition {
    transition: 0.3s ease;
  }
  .chat-messages::-webkit-scrollbar {
    width: 8px;
  }

  .chat-messages::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 4px;
  }

  .chat-messages::-webkit-scrollbar-thumb {
    background: rgba(168, 85, 247, 0.5);
    border-radius: 4px;
    transition: 0.3s;
  }

  .chat-messages::-webkit-scrollbar-thumb:hover {
    background: rgba(168, 85, 247, 0.8);
  }

  .chat-messages {
    scrollbar-width: thin;
    scrollbar-color: rgba(168, 85, 247, 0.5) rgba(255, 255, 255, 0.05);
  }
</style>

<div class="container">
  <canvas
    id="glitterCanvas"
    style="
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: -1;
    "
  ></canvas>
  <div class="chat-container">
    <div class="chat-header d-flex align-items-center justify-content-between">
      <a
        href="/profile/<%= otherUser._id %>"
        class="text-white text-decoration-none fw-bold hover-purple transition"
      >
        <div class="d-flex align-items-center">
          <img
            src="<%= otherUser.image %>"
            class="rounded-circle me-3"
            style="width: 40px; height: 40px; object-fit: cover"
          />

          <%= otherUser.username %>
        </div></a
      >
      <a href="/conversations" class="text-secondary">
        <i class="fa-solid fa-xmark"></i>
      </a>
    </div>

    <div class="chat-messages d-flex flex-column" id="message-pane">
      <% if(chats && chats.length > 0) { %> <% chats.forEach(msg => { %>
      <div
        class="message-bubble <%= msg.sender.equals(currUser._id) ? 'msg-sent' : 'msg-received' %>"
      >
        <%= msg.content %>
        <div style="font-size: 0.65rem; opacity: 0.7; margin-top: 4px">
          <%= new Date(msg.createdAt).toLocaleTimeString([], { hour: '2-digit',
          minute: '2-digit' }) %>
        </div>
      </div>
      <% }) %> <% } else { %>
      <div
        class="d-flex flex-column justify-content-center align-items-center h-100 text-secondary opacity-75"
      >
        <i class="fa-regular fa-comments mb-3" style="font-size: 2rem"></i>
        <p class="mb-0 small">No messages yet. Start the conversation.</p>
      </div>
      <% } %>
    </div>

    <div class="chat-input-area">
      <form
        action="/messages/<%= otherUser._id %>"
        method="POST"
        class="d-flex gap-2 align-items-center"
      >
        <a
          href="/agreement/<%= otherUser._id %>"
          class="btn btn-agreement px-4 py-2 small text-decoration-none"
        >
          <i class="fa-solid fa-file-contract me-2"></i>Make Agreement
        </a>

        <input
          type="text"
          name="content"
          class="form-control bg-dark border-secondary text-white rounded-pill px-4 mx-3"
          placeholder="Type your message..."
          autocomplete="off"
          required
        />

        <button
          type="submit"
          class="btn btn-white-capsule rounded-circle"
          style="width: 45px; height: 45px"
        >
          <i class="text-white fa-solid fa-paper-plane"></i>
        </button>
      </form>
    </div>
  </div>
</div>

<script>
  const pane = document.getElementById("message-pane");
  pane.scrollTop = pane.scrollHeight;
</script>

<script>
  const canvas = document.getElementById("glitterCanvas");
  const ctx = canvas.getContext("2d");

  let particles = [];
  const colors = ["#a855f7", "#ec4899", "#6366f1", "#3b82f6"];

  function init() {
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;
    particles = [];
    for (let i = 0; i < 90; i++) {
      particles.push({
        x: Math.random() * canvas.width,
        y: Math.random() * canvas.height,
        size: Math.random() * 4 + 1,
        dx: (Math.random() - 0.5) * 0.8,
        dy: (Math.random() - 0.5) * 0.8,
        color: colors[Math.floor(Math.random() * colors.length)],
      });
    }
  }

  function animate() {
    ctx.clearRect(0, 0, canvas.width, canvas.height);
    particles.forEach((p) => {
      // Draw 3D-like shaded sphere
      let gradient = ctx.createRadialGradient(p.x, p.y, 0, p.x, p.y, p.size);
      gradient.addColorStop(0, "white");
      gradient.addColorStop(0.4, p.color);
      gradient.addColorStop(1, "transparent");

      ctx.fillStyle = gradient;
      ctx.beginPath();
      ctx.arc(p.x, p.y, p.size, 0, Math.PI * 2);
      ctx.fill();

      // Movement logic
      p.x += p.dx;
      p.y += p.dy;

      // Bounce off edges
      if (p.x < 0 || p.x > canvas.width) p.dx *= -1;
      if (p.y < 0 || p.y > canvas.height) p.dy *= -1;
    });
    requestAnimationFrame(animate);
  }

  window.addEventListener("resize", init);
  init();
  animate();
</script>
